<?xml version="1.0"?>
<opencv_storage>
<!--This file is configured to use images in the "image" folder i.e. my phone camera resized to 640x480 for speed -->

<!--Min and Max HSV thresholding values-->
<Thresholds>
  <LowH>20</LowH>
  <HighH>51</HighH>
  <LowS>95</LowS>
  <HighS>248</HighS>
  <LowV>89</LowV>
  <HighV>255</HighV>
</Thresholds>

<!--Camera Properties-->
<Camera>
  <!--Camera ID (Starts at 0 and count up for ever succesive device)-->
  <ID>0</ID>
  <!--Physical ofset of the camera from the center of the robot-->
  <Offset>
    0 0 0
  </Offset>
  <!--Physical angle offset of the camera from forward-->
  <AngleOffset>
    <rool>0.</rool>
    <pitch>0.</pitch>
    <yaw>0.</yaw>
  </AngleOffset>
  <!--Intresic Matrix for pose estimation (Dont edit manuly. Thr program will calculate these values)-->
  <CameraMatrix type_id="opencv-matrix">
    <rows>3</rows>
    <cols>3</cols>
    <dt>d</dt>
    <data>
      5.5255216863386806e+02 0. 3.1519772069009963e+02 
      0. 5.5196412081742744e+02 2.2797714670068797e+02 
      0. 0. 1.
    </data>
  </CameraMatrix>
  <!--Coefficents to compensate for lense distortion (Dont edit manuly. Thr program will calculate these values)-->
  <Distortion type_id="opencv-matrix">
    <rows>1</rows>
    <cols>5</cols>
    <dt>d</dt>
    <data>
      3.1258211315920514e-01 
      -1.7505129658578438e+00
      -5.1279987173060886e-03 
      1.8969764887319756e-03
      3.4821984237812211e+00
    </data>
  </Distortion>
</Camera>

<!--List of targets to detect-->
<Targets>
  <!--Ech entry starts and end with a blank tag-->
  <_>
    <!--Idetifier for each target-->
    <Name>"Test Target"</Name>
    <!--Shape of the target in the same units as used for camera calibration-->
    <Shape>
      0 0 
      5 0 
      5 3 
      4 3 
      4 1 
      1 1 
      1 3 
      0 3
    </Shape>
  </_>
</Targets>
</opencv_storage>
